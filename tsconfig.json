{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2017",
		"module": "ESNext",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"outDir": "lib",
	},
	"include": [
		"src"
	]
}